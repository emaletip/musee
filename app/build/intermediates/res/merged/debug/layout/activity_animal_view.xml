<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xo7.lemusedelafaunedasie.AnimalViewActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CAT"
                android:id="@+id/animal_name"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#B4CE63"
                android:textStyle="bold"
                android:textSize="24dp"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:id="@+id/animal_top_image"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/animal_name"
                android:scaleType="centerCrop"
                android:background="#cccccc"/>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/animal_prop_list"
                android:layout_below="@+id/animal_top_image"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="20dp">

            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/animal_top_image"
                android:layout_marginTop="-25dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/play_button"
                    android:layout_weight="1"
                    android:src="@drawable/button_play"
                    android:scaleType="fitCenter"
                    android:background="@null"/>

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/download_image"
                    android:layout_below="@+id/animal_top_image"
                    android:src="@drawable/button_ddl"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/share_button"
                    android:background="@null"
                    android:layout_weight="1"
                    android:src="@drawable/button_share"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Desc"
                android:id="@+id/animal_desc"
                android:layout_below="@+id/animal_prop_list"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
