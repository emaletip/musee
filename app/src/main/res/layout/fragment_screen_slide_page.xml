<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.xo7.lemusedelafaunedasie.AnimalViewActivity">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CAT"
            android:id="@+id/animal_name"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:background="#B4CE63"
            android:textStyle="bold"
            android:textSize="24dp"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/animal_top_image"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/animal_name"
            android:scaleType="centerCrop"
            />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/animal_prop_list"
            android:layout_below="@+id/animal_top_image"
            android:padding="10dp">

        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Desc"
            android:id="@+id/animal_desc"
            android:layout_below="@+id/animal_prop_list"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </RelativeLayout>
</ScrollView>